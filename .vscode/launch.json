    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to API",
            "type": "docker",
            "request": "attach",
            "platform": "netCore",
            "sourceFileMap": {
                "/app": "${workspaceFolder}"
            }
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Brave",
            "runtimeExecutable": "/Applications/Brave Browser.app/Contents/MacOS/Brave Browser",
            "userDataDir": true,
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/chat-client"
        }
    ]
}